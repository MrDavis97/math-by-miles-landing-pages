<!-- Script for hamburger menu on mobile -->
<script type="text/javascript">
  /* Set the width of the side navigation to 250px */
  function openNav() {
    document.getElementById("mySidenav").style.width = "250px";
    document.getElementById("mySidenav").style.borderWidth = "4px";
    document.getElementById("dim").style.display = "block";
  }

  /* Set the width of the side navigation to 0 */
  function closeNav() {
    document.getElementById("mySidenav").style.width = "0";
    document.getElementById("mySidenav").style.borderWidth = "0px";
    document.getElementById("dim").style.display = "none";
  }

  document.getElementById('hamburger').addEventListener('click', openNav);
  document.getElementById('closebtn').addEventListener('click', closeNav);
  document.getElementById('how-it-works-slide-in').addEventListener('click', closeNav);
</script>

